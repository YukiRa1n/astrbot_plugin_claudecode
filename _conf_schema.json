{
  "workspace_name": {
    "type": "string",
    "description": "工作目录名称",
    "default": "workspace"
  },
  "claude_md": {
    "type": "string",
    "description": "CLAUDE.md内容(项目指令,让Claude Code更好理解任务)",
    "default": ""
  },
  "auth_token": {
    "type": "string",
    "description": "Anthropic Auth Token (优先使用)",
    "default": ""
  },
  "api_key": {
    "type": "string",
    "description": "Anthropic API Key",
    "default": ""
  },
  "api_base_url": {
    "type": "string",
    "description": "API Base URL (留空使用官方地址)",
    "default": ""
  },
  "model": {
    "type": "string",
    "description": "模型名称(opus/sonnet或完整名如claude-opus-4-5-20250929,留空使用默认)",
    "default": ""
  },
  "auto_install_claude": {
    "type": "bool",
    "description": "插件加载时自动安装Claude Code CLI",
    "default": true
  },
  "allowed_tools": {
    "type": "string",
    "description": "允许的工具(逗号分隔,Bash会自动限制在workspace目录下)",
    "default": "Read,Write,Edit,Glob,Grep,Bash"
  },
  "disallowed_tools": {
    "type": "string",
    "description": "禁用的工具(逗号分隔)",
    "default": ""
  },
  "permission_mode": {
    "type": "string",
    "description": "权限模式(default/acceptEdits/plan/dontAsk)",
    "default": "default"
  },
  "add_dirs": {
    "type": "string",
    "description": "额外允许访问的目录(逗号分隔)",
    "default": ""
  },
  "skills_to_install": {
    "type": "string",
    "description": "要安装的Skills(逗号分隔)",
    "default": ""
  },
  "max_turns": {
    "type": "int",
    "description": "单次任务最大轮数",
    "default": 15
  },
  "timeout_seconds": {
    "type": "int",
    "description": "任务超时时间(秒)",
    "default": 180
  },
  "http_server_port": {
    "type": "int",
    "description": "HTTP服务器端口(用于网页部署,0表示禁用)",
    "default": 6200
  }
}
